@{
    ViewData["Title"] = "Roots";
}
<style>

    h3 {
        font-size: 35px;
        text-transform: uppercase;
        text-align: center;
        padding: 5%;
    }

    h5 {
        font-size: 20px;
        text-align: center;
        padding-left: 15%;
        padding-right: 15%;
        padding-top: 10px;
    }

    th {
        font-size: 17px;
        text-decoration: underline;
    }

    .dropbtn {
        color: azure;
        font-size: 16px;
        background: #161818;
        border: 1px;
        cursor: pointer;
        -webkit-border-radius: 5px;
        border-radius: 5px;
        width: 100px;
        height: 26px;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 120px;
        min-height: 30px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */
    .dropdown:hover .dropbtn {
        background-color: #35353A;
    }

    input[type=submit] {
        border: 0px;
        min-height: 27px;
        min-width: 120px;
        text-align: left;
    }

        input[type=submit]:hover {
            background-color: #525258;
        }
</style>

<h3>Availible roots:</h3>
<div class="dropdown">
    <button class="dropbtn">Sort</button>
    <div class="dropdown-content">
        <form method="post" action="/Home/Sort">
            <input type="submit" name="type" value="Economic" />
            <input type="submit" name="type" value="Luxury" />
            <input type="submit" name="type" value="Long Term" />
        </form>
    </div>
</div>
<div>
    <h5 style="float: left">Tickets</h5>
    <h5 style="float: right">Accomodation</h5>
</div>
<br />
<div>
    <table width=300px border="0" style="float: left">
        <tr>
            <th>Root</th>
            <th>Cost</th>
        </tr>
        @foreach (var item in Model.Tickets)
        {
            <tr>
                <td>@item.Departure -> @item.Destination -> @item.Departure</td>
                <td>@item.Cost$</td>
            </tr>
            <tr>
                <td style="padding-bottom:8px">@item.Transport -  @item.TripLength hrs</td>

            </tr>
        }
    </table>

    <table width=300px border="0" style="float: right">
        <tr>
            <th>Hotel</th>
            <th>Cost</th>
        </tr>
        @foreach (var item in Model.Accomodation)
        {
            <tr>
                <td>@item.Hotel  - @item.Term days</td>
                <td>@item.Cost$</td>
            </tr>
        }
    </table>
</div>